.row
  = devise_error_messages!
  .col-md-4.col-md-offset-4
    .panel.panel-default
      .panel-heading
        %h3.panel-title Change your password
      
      .panel-body
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: {:method => :put}) do |f|
          
          %fieldset
            .form-group
              = f.hidden_field :reset_password_token
            .form-group
              = f.password_field :password, autofocus: true, :placeholder => "New Password", :class => "form-control"

            .form-group
              = f.password_field :password_confirmation, autofocus: true, :placeholder => "Confirm new password", :class => "form-control"
            
            .form-group
              = f.submit "Change my password", :class => "btn btn-lg btn-success btn-block"

      .panel-footer
        = render "devise/shared/links"

