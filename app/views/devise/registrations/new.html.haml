.row
  .col-md-4
    = devise_error_messages!
    .panel.panel-default
      .panel-heading
        %h3.panel-title Sign up Form
      .panel-body
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          %fieldset
            / .form-group
            /   = f.first_name :first_name, :autofocus => true, :placeholder => "First name", :class => "form-control"

            / .form-group
            /   = f.last_name :last_name, :autofocus => true, :placeholder => "Last name", :class => "form-control"

            .form-group
              = f.email_field :email, autofocus: true, :placeholder => "E-mail", :class => "form-control", :required => true

            / .form-group
            /   = f.course :course, :autofocus => true, :placeholder => "Course", :class => "form-control"

            / .form-group
            /   = f.school :school, :autofocus => true, :placeholder => "School", :class => "form-control"



            .form-group
              = f.password_field :password, autocomplete: "off", :placeholder => "Password (8 chracters minumum)", :class => "form-control"
             
            .form-group
              = f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Password Confirmation", :class => "form-control"
             
            .form-group
              = f.submit "Submit", :class => "btn btn-lg btn-success btn-block"
